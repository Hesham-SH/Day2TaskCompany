@{
}


@model ProjectVM

<form asp-action="AddSingleProject" asp-controller="project" asp-route-itemid="@ViewBag.id" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />

        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />

        <div>
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="confirmLocation"></label>
        <input asp-for="confirmLocation" class="form-control" />

        <div>
            <span asp-validation-for="confirmLocation" class="text-danger"></span>
        </div>
    </div>
    @*<input type="hidden" value="@ViewBag.id" />*@
    <input type="submit" value="Add Project" />
</form>
